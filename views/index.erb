    <style>
        * {
            box-sizing: border-box;
        }
        
        body {
            font-family: "Helvetica Neue", Arial, "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        
        .logo {
            margin-bottom: 30px;
            text-align: center;
        }
        
        .logo img {
            max-height: 92px;
            max-width: 468px;
            height: auto;
            width: auto;
        }
        
        .logo h1 {
            font-size: 90px;
            font-weight: normal;
            margin: 0;
            color: #4285f4;
            display: none;
        }
        
        .search-container {
            width: 100%;
            max-width: 584px;
            padding: 0 20px;
        }
        
        .search-box {
            position: relative;
            width: 100%;
            margin-bottom: 30px;
        }
        
        .search-input {
            width: 100%;
            height: 44px;
            border: 1px solid #dfe1e5;
            border-radius: 24px;
            padding: 0 20px;
            font-size: 16px;
            outline: none;
            transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            background-color: #fff;
            appearance: none;
            background-image: url('data:image/svg+xml;charset=US-ASCII,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 4 5"><path fill="%23666" d="M2 0L0 2h4zm0 5L0 3h4z"/></svg>');
            background-repeat: no-repeat;
            background-position: right 20px center;
            background-size: 12px;
            cursor: pointer;
        }
        
        .search-input:hover {
            border-color: #dadce0;
            box-shadow: 0 1px 6px rgba(32,33,36,.28);
        }
        
        .search-input:focus {
            border-color: #4285f4;
            box-shadow: 0 1px 6px rgba(32,33,36,.28);
        }
        
        .options {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .option-group {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 5px;
        }
        
        .option-label {
            font-size: 13px;
            color: #3c4043;
        }
        
        select, input[type="datetime-local"] {
            height: 36px;
            border: 1px solid #dadce0;
            border-radius: 4px;
            padding: 0 8px;
            font-size: 14px;
            background-color: #fff;
            outline: none;
            transition: border-color 0.2s ease-in-out;
        }
        
        select:hover, input[type="datetime-local"]:hover {
            border-color: #bdc1c6;
        }
        
        select:focus, input[type="datetime-local"]:focus {
            border-color: #4285f4;
        }
        
        .buttons {
            text-align: center;
        }
        
        .search-button {
            background-color: #5e17eb;
            border: 1px solid #5e17eb;
            border-radius: 6px;
            color: #ffffff;
            font-size: 16px;
            font-weight: 500;
            margin: 15px 4px;
            padding: 0 32px;
            line-height: 40px;
            height: 48px;
            min-width: 120px;
            text-align: center;
            cursor: pointer;
            user-select: none;
            transition: all 0.2s ease-in-out;
        }
        
        .search-button:hover {
            background-color: #4c12c4;
            border: 1px solid #4c12c4;
            box-shadow: 0 2px 8px rgba(94, 23, 235, 0.3);
            color: #ffffff;
        }
        
        .search-button:focus {
            outline: none;
            border: 1px solid #5e17eb;
            box-shadow: 0 0 0 3px rgba(94, 23, 235, 0.2);
        }
        
        .search-button:active {
            background-color: #3d0e9f;
            transform: translateY(1px);
        }
        
        .footer {
            position: absolute;
            bottom: 20px;
            right: 20px;
        }
        
        .github-link {
            color: #70757a;
            text-decoration: none;
            font-size: 13px;
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 8px 12px;
            border-radius: 20px;
            transition: all 0.2s ease-in-out;
        }
        
        .github-link:hover {
            color: #5e17eb;
            background-color: rgba(94, 23, 235, 0.05);
        }
        
        .github-icon {
            width: 16px;
            height: 16px;
            fill: currentColor;
        }
        
        @media (max-width: 600px) {
            .logo img {
                max-height: 60px;
                max-width: 306px;
            }
            
            .logo h1 {
                font-size: 60px;
            }
            
            .options {
                flex-direction: column;
                align-items: center;
            }
            
            .option-group {
                width: 100%;
                max-width: 200px;
            }
            
            select, input[type="datetime-local"] {
                width: 100%;
            }
            
            .footer {
                position: static;
                margin-top: 30px;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="logo">
        <img src="/logo.png" alt="Social Search" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
        <h1>Social</h1>
    </div>
    
    <div class="search-container">
        <form id="searchForm">
            <div class="search-box">
                <select name="service" id="service" class="search-input" required>
                    <option value="">検索サービスを選択してください</option>
                    <option value="x">X (Twitter)</option>
                </select>
            </div>
            
            <div class="options">
                <div class="option-group">
                    <div class="option-label">開始日時（任意）</div>
                    <input type="datetime-local" name="since" id="since">
                </div>
                
                <div class="option-group">
                    <div class="option-label">終了日時（任意）</div>
                    <input type="datetime-local" name="until" id="until">
                </div>
            </div>
            
            <div class="buttons">
                <button type="submit" class="search-button">Search</button>
            </div>
        </form>
    </div>
    
    <div class="footer">
        <a href="https://github.com/yuukis/social-search-redirector" target="_blank" class="github-link">
            <svg class="github-icon" viewBox="0 0 16 16">
                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
            </svg>
            GitHub
        </a>
    </div>
    
    <script>
        document.getElementById('searchForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const service = document.getElementById('service').value;
            if (!service) {
                alert('検索サービスを選択してください');
                return;
            }
            
            const since = document.getElementById('since').value;
            const until = document.getElementById('until').value;
            
            let url = '/' + service;
            const params = new URLSearchParams();
            
            if (since) {
                const sinceFormatted = since.replace('T', '_') + ':00';
                params.append('since', sinceFormatted);
            }
            
            if (until) {
                const untilFormatted = until.replace('T', '_') + ':00';
                params.append('until', untilFormatted);
            }
            
            if (params.toString()) {
                url += '?' + params.toString();
            }
            
            window.open(url, '_blank');
        });
    </script>
</body>
</html>